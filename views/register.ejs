  <div class="container">
<div class="row">
    <form class="col s12" action="/user/register" method="post" id="reg-form">
      <div class="row">
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input type="text" id="username" name="username"><br>
          <label for="username">
            <span class="<% if(locals.failed) { %> red-text <%}%>t">
              Username
            </span>
          </label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="email" type="email" name="email" class="validate" required>
          <label for="email">
            <span class="<% if(locals.failed) { %> red-text <%}%>t">
              Email
            </span>
          </label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password" type="password" name="password" class="validate" minlength="6" required>
          <label for="password">
              Password
          </label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <button class="btn btn-large btn-register waves-effect waves-light" type="submit" name="action">
              <% if(locals.failed) { %> Try Again <% }else{ %> Register <%}%>
            <i class="material-icons right">done</i>
          </button>
